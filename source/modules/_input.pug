//-------------------------------------------------------
//- Modules :: Input Field
//-------------------------------------------------------

//- Input Field
mixin input-field({ id, type, placeholder, value, size })
  input.form-control(
    class= size ? `form-control--${size}` : null
    type= type ? type : 'text'
    id= id ? id : null
    value= value ? value : null
    placeholder= placeholder ? placeholder : null
  )&attributes(attributes)

//- Group Input Field
mixin group-input-field({ label, id, type, placeholder, size, value })
  .form-group.form-custom&attributes(attributes)
    if label
      label.form-label(
        for= id ? id : null
      )= label
    +input-field({ id, type, placeholder, value, size })

//- Group Input Field Required
mixin group-input-field-required({ label, id, type, placeholder, size, value })
  .form-group.form-custom&attributes(attributes)
    if label
      label.form-label(
        for= id ? id : null
      )= label
    +input-field({ label, id, type, placeholder, value, size })(
      required
    )

